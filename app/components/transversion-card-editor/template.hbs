<hr>

<div class="row">
  <div class="col-xs-6 summary">
    <label>Summary</label>
    {{textarea value=data.summary placeholder=summary class="form-control"}}
  </div>
  <div class="col-xs-6 edit-actions">
    <div class="btn-group">
      <button class="btn btn-primary" onclick={{action saveCard (hash name=data.summary)}}>Save</button>
      <button class="btn btn-default" onclick={{cancelCard}}>Cancel</button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 source">
    {{#mobiledoc-editor
      mobiledoc=data.source
      atoms=(mobiledoc-atoms-list)
      as |editor|
    }}
      <div class="btn-toolbar">
        <div class="btn-group">
          {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
            Bold
          {{/mobiledoc-markup-button}}
          {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
            Italic
          {{/mobiledoc-markup-button}}
        </div>
        <div class="btn-group">
          {{#mobiledoc-definition-button editor=editor classNames="btn btn-default btn-sm"}}
            Define
          {{/mobiledoc-definition-button}}
        </div>
      </div>
    {{/mobiledoc-editor}}
  </div>
  <div class="col-xs-6 transversion">
    {{#mobiledoc-editor
      mobiledoc=data.transversion
      atoms=(mobiledoc-atoms-list)
      as |editor|
    }}
      <div class="btn-toolbar">
        <div class="btn-group">
          {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
            Bold
          {{/mobiledoc-markup-button}}
          {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
            Italic
          {{/mobiledoc-markup-button}}
        </div>
      </div>
    {{/mobiledoc-editor}}
  </div>
</div>
