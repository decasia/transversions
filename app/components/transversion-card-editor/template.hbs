<hr>

<div class="row transversion-meta">
  <div class="col-xs-10 summary">
    <label>Summary</label>
    {{textarea value=data.summary placeholder=summary class="form-control"}}
  </div>
  <div class="col-xs-2 transversion-edit-action">
    <div class="btn-group">
      <button class="btn btn-success btn-block"
        onclick={{action "saveTransversion" }}>
        Done editing
      </button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 source page">
    <h3 class="editor-section-title text-center">Source Text</h3>
    {{#mobiledoc-editor
      mobiledoc=data.source
      atoms=(mobiledoc-atoms-list)
      on-change=(action "updateAttribute" "source")
      as |editor|
    }}
      <div class="btn-toolbar">
        <div class="btn-group">
          {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
            <span class="glyphicon glyphicon-bold" aria-hidden="true"></span>
          {{/mobiledoc-markup-button}}
          {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
            <span class="glyphicon glyphicon-italic" aria-hidden="true"></span>
          {{/mobiledoc-markup-button}}
        </div>
        <div class="btn-group">
          {{#mobiledoc-definition-button editor=editor buttonClassNames="btn btn-default btn-sm btn-info"}}
            Define
          {{/mobiledoc-definition-button}}
        </div>
      </div>
    {{/mobiledoc-editor}}
  </div>
  <div class="col-xs-6 transversion facing-page">
    <h3 class="editor-section-title text-center">Transversion Text</h3>
    {{#mobiledoc-editor
      mobiledoc=data.transversion
      atoms=(mobiledoc-atoms-list)
      on-change=(action "updateAttribute" "transversion")
      as |editor|
    }}
      <div class="btn-toolbar">
        <div class="btn-group">
          {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
            <span class="glyphicon glyphicon-bold" aria-hidden="true"></span>
          {{/mobiledoc-markup-button}}
          {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
            <span class="glyphicon glyphicon-italic" aria-hidden="true"></span>
          {{/mobiledoc-markup-button}}
        </div>
      </div>
    {{/mobiledoc-editor}}
  </div>
</div>
