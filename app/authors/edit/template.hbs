<h1>Edit {{model.name}}</h1>

<div class="form">
  <div class="author-name form-group">
    Name
    {{input value=model.name cols="50" rows="5" class="form-control"}}
  </div>

  <div class="author-description form-group">
    Description
    {{textarea value=model.description cols="50" rows="5" class="form-control"}}
  </div>
</div>

{{#if model.hasDirtyAttributes}}
  <button {{action "save"}} class="btn btn-primary">Save changes</button>
{{/if}}

<h3>Works</h3>

<ul class="nav nav-pills nav-stacked">
  {{#each model.works as |work|}}
  <li>
    {{link-to work.name "works.show" work}}
  </li>
  {{else}}
    <li class="text-warning">
      This author has no works.
    </li>
  {{/each}}
</ul>

<hr>
{{new-model type="work" defaults=(hash name="") action="newWork"}}
