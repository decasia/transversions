<h1>Authentication</h1>

<div class="form">
  <div class="username form-group">
    Name
    {{input value=username placeholder="Enter username..." class="form-control"}}
  </div>
  <div class="password form-group">
    Password
    {{input value=password type="password" class="form-control"}}
  </div>
</div>

{{#if valid}}
  <button {{action "login"}} class="btn btn-primary">Log in</button>
{{else}}
  <button class="btn btn-primary disabled">Log in</button>
{{/if}}
