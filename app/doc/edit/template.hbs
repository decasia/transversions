<h1>Editing {{model.name}}</h1>

{{#mobiledoc-editor
    atoms=(mobiledoc-atoms-list)
    mobiledoc=model.content as |editor|
}}
  <div class="btn-toolbar">
    <div class="btn-group">
      {{#mobiledoc-section-button editor=editor for="h2" classNames="btn btn-default btn-sm"}}
      Heading
      {{/mobiledoc-section-button}}
      {{#mobiledoc-section-button editor=editor for="h3" classNames="btn btn-default btn-sm"}}
      Subheading
      {{/mobiledoc-section-button}}
    </div>
    <div class="btn-group">
      {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
        Bold
      {{/mobiledoc-markup-button}}
      {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
        Italic
      {{/mobiledoc-markup-button}}
    </div>
    <div class="btn-group">
      {{#mobiledoc-definition-button editor=editor classNames="btn btn-default btn-sm"}}
        Define
      {{/mobiledoc-definition-button}}
    </div>
  </div>

{{/mobiledoc-editor}}
