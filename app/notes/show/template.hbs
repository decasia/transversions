<ol class="breadcrumb">
  <li>{{link-to model.author.name "authors.show" model.author}}</li>
  <li>Glossary</li>
  <li class="active">{{model.name}}</li>
</ol>

<h1>{{model.name}}</h1>

{{#if model.hasDirtyAttributes}}
  <button class="btn btn-success" {{action "saveChanges"}}>Save changes</button>
{{/if}}

<h3>Source</h3>
<div>
  {{#mobiledoc-editor
      atoms=(mobiledoc-atoms-list)
      cards=(mobiledoc-cards-list)
      on-change=(action "updateAttribute" "source")
      mobiledoc=model.source as |editor|
  }}
    <div class="btn-toolbar">
      <div class="btn-group">
        {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
          <span class="glyphicon glyphicon-bold" aria-hidden="true"></span>
        {{/mobiledoc-markup-button}}
        {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
          <span class="glyphicon glyphicon-italic" aria-hidden="true"></span>
        {{/mobiledoc-markup-button}}
      </div>
    </div>
  {{/mobiledoc-editor}}
</div>

<h3>Discussion</h3>
<div>
  {{#mobiledoc-editor
      atoms=(mobiledoc-atoms-list)
      cards=(mobiledoc-cards-list)
      on-change=(action "updateAttribute" "discussion")
      mobiledoc=model.discussion as |editor|
  }}
    <div class="btn-toolbar">
      <div class="btn-group">
        {{#mobiledoc-markup-button editor=editor for="strong" classNames="btn btn-default btn-sm"}}
          <span class="glyphicon glyphicon-bold" aria-hidden="true"></span>
        {{/mobiledoc-markup-button}}
        {{#mobiledoc-markup-button editor=editor for="em" classNames="btn btn-default btn-sm"}}
          <span class="glyphicon glyphicon-italic" aria-hidden="true"></span>
        {{/mobiledoc-markup-button}}
      </div>
    </div>
  {{/mobiledoc-editor}}
</div>
